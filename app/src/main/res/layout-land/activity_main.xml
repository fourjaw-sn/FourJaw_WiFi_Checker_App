    <TextView
        android:id="@+id/timeline_legend_Network_change_icon"
        android:layout_width="30dp"
        android:layout_height="5dp"
        android:layout_marginTop="8dp"
        android:background="@color/RED"
        app:layout_constraintStart_toStartOf="@+id/timeline_legend_Network_change_box"
        app:layout_constraintTop_toTopOf="@+id/Timeline_legend_Wifi_strength_box" />

    <TextView
        android:id="@+id/timeline_legend_Network_change_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Network change"
        android:textColor="#12141c"
        app:layout_constraintStart_toEndOf="@+id/timeline_legend_Network_change_icon"
        app:layout_constraintTop_toTopOf="@+id/Timeline_legend_Wifi_strength_box" />

    <TextView
        android:id="@+id/timeline_legend_Access_point_change_box"
        android:layout_width="160dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/Timeline_legend_box"
        app:layout_constraintStart_toEndOf="@+id/timeline_legend_Network_change_box"
        app:layout_constraintTop_toTopOf="@+id/Timeline_legend_box"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/timeline_legend_Access_point_change_icon_red"
        android:layout_width="30dp"
        android:layout_height="5dp"
        android:layout_marginTop="8dp"
        android:background="@color/RED"
        app:layout_constraintStart_toStartOf="@+id/timeline_legend_Access_point_change_box"
        app:layout_constraintTop_toTopOf="@+id/Timeline_legend_Wifi_strength_box" />

    <TextView
        android:id="@+id/timeline_legend_Access_point_change_icon_white"
        android:layout_width="10dp"
        android:layout_height="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:background="#F5F5F5"
        app:layout_constraintStart_toStartOf="@+id/timeline_legend_Access_point_change_box"
        app:layout_constraintTop_toTopOf="@+id/Timeline_legend_Wifi_strength_box" />

    <TextView
        android:id="@+id/timeline_legend_Access_point_change_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Access point change"
        android:textColor="#12141c"
        app:layout_constraintStart_toStartOf="@+id/timeline_legend_Access_point_change_box"
        app:layout_constraintTop_toTopOf="@+id/Timeline_legend_Wifi_strength_box" />

    <com.github.mikephil.charting.charts.CombinedChart
        android:id="@+id/Timeline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:translationZ="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/Timeline_box"
        app:layout_constraintEnd_toEndOf="@+id/Timeline_box"
        app:layout_constraintStart_toStartOf="@+id/Timeline_box"
        app:layout_constraintTop_toBottomOf="@+id/Timeline_legend_box" />

    <TextView
        android:id="@+id/Timeline_green_box"
        android:layout_width="0dp"
        android:layout_height="105dp"
        android:background="#4D539719"
        app:layout_constraintBottom_toTopOf="@+id/Timeline_orange_box"
        app:layout_constraintEnd_toEndOf="@+id/Timeline_red_box"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/Timeline_red_box" />

    <TextView
        android:id="@+id/Timeline_orange_box"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:background="#4DF89D13"
        app:layout_constraintBottom_toTopOf="@+id/Timeline_red_box"
        app:layout_constraintEnd_toEndOf="@+id/Timeline_red_box"
        app:layout_constraintStart_toStartOf="@+id/Timeline_red_box" />

    <TextView
        android:id="@+id/Timeline_red_box"
        android:layout_width="504dp"
        android:layout_height="200dp"
        android:layout_marginStart="49dp"
        android:layout_marginBottom="35dp"
        android:background="#4DB00215"
        app:layout_constraintBottom_toBottomOf="@+id/Timeline_box"
        app:layout_constraintStart_toStartOf="@+id/Timeline_box" />

    <TextView
        android:id="@+id/Divider"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Wifi_details_box" />

    <TextView
        android:id="@+id/Connection_Quality_heading_box"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/box_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Divider"
        app:layout_constraintTop_toBottomOf="@+id/Heading_box" />

    <TextView
        android:id="@+id/Connection_Quality_heading_text"
        android:layout_width="340dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/Connection_Quality_heading_text"
        android:textColor="#12141c"
        android:textSize="20dp"
        android:translationZ="100dp"
        app:layout_constraintStart_toStartOf="@+id/Connection_Quality_heading_box"
        app:layout_constraintTop_toTopOf="@+id/Connection_Quality_heading_box"
        tools:ignore="SpUsage,TextSizeCheck" />

    <TextView
        android:id="@+id/Connection_quality_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/roboto"
        android:text="Since:"
        android:textColor="#12141c"
        android:textSize="20dp"
        android:translationZ="100dp"
        app:layout_constraintEnd_toEndOf="@+id/Connection_Quality_heading_box"
        app:layout_constraintTop_toTopOf="@+id/Connection_Quality_heading_box"
        tools:ignore="SpUsage,TextSizeCheck" />

    <TextView
        android:id="@+id/Connection_Quality_box"
        android:layout_width="0dp"
        android:layout_height="200dp"

        android:background="@drawable/box_bottom"
        app:layout_constraintEnd_toEndOf="@+id/Connection_Quality_heading_box"
        app:layout_constraintStart_toStartOf="@+id/Connection_Quality_heading_box"
        app:layout_constraintTop_toBottomOf="@+id/Connection_Quality_heading_box" />


    <!-- Divider -->

    <TextView
        android:id="@+id/connection_Quality_Good_box"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/green_box"
        app:layout_constraintStart_toStartOf="@+id/Connection_Quality_box"
        app:layout_constraintTop_toTopOf="@+id/Connection_Quality_box" />


    <!-- Timeline -->

    <TextView
        android:id="@+id/Connection_Quality_good_percentage"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/montserrat_bold"
