<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:translationZ="50dp"
    tools:context=".MainActivity">

    <!-- Heading -->

    <TextView
        android:id="@+id/Heading_box"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/box"
        android:translationZ="00dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Heading_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/Heading_logo_content_description"
        android:translationZ="100dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/Heading_box"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toStartOf="@+id/Heading_box"
        app:layout_constraintTop_toTopOf="@+id/Heading_box"
        app:srcCompat="@drawable/android_chrome_512x512"
        tools:srcCompat="@drawable/android_chrome_512x512" />

    <TextView
        android:id="@+id/Heading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/Heading_text"
        android:textColor="#12141c"
        android:textSize="30dp"
        android:translationZ="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/Heading_box"
        app:layout_constraintStart_toEndOf="@+id/Heading_logo"
        app:layout_constraintTop_toTopOf="@+id/Heading_box"
        tools:ignore="SpUsage" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Reset_test_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/purple_box"
        android:fontFamily="@font/roboto"
        android:text="Reset Test"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:translationZ="100dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/Heading_box"
        app:layout_constraintEnd_toEndOf="@+id/Heading_box"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpUsage,TextSizeCheck" />


    <!-- Wifi details -->

    <TextView
        android:id="@+id/Wifi_details_heading_box"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/box_top"
        app:layout_constraintEnd_toStartOf="@+id/Divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Heading_box" />

    <TextView
        android:id="@+id/Wifi_details_heading_text"
        android:layout_width="250dp"
        android:layout_height="34dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/Wifi_details_heading_text"
        android:textColor="#12141c"
        android:textSize="20dp"
        android:translationZ="100dp"
        app:layout_constraintStart_toStartOf="@+id/Wifi_details_heading_box"
        app:layout_constraintTop_toTopOf="@+id/Wifi_details_heading_box"
        tools:ignore="SpUsage,TextSizeCheck" />

    <TextView
        android:id="@+id/Wifi_details_box"
        android:layout_width="0dp"
        android:layout_height="120dp"

        android:background="@drawable/box_bottom"
        app:layout_constraintEnd_toEndOf="@+id/Wifi_details_heading_box"
        app:layout_constraintStart_toStartOf="@+id/Wifi_details_heading_box"
        app:layout_constraintTop_toBottomOf="@+id/Wifi_details_heading_box" />

    <TextView
        android:id="@+id/Wifi_details_properties_text"
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/roboto"
        android:text="@string/Wifi_details_properties_text"
        android:textColor="#12141c"
        android:textSize="20dp"
        android:translationZ="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/Wifi_details_box"
        app:layout_constraintStart_toStartOf="@+id/Wifi_details_box"
        app:layout_constraintTop_toTopOf="@+id/Wifi_details_box"
        tools:ignore="SpUsage,TextSizeCheck" />

    <TextView
        android:id="@+id/Wifi_details_values"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/roboto"
        android:text="@string/Wifi_details_values_placeholder"
        android:textColor="#12141c"
        android:textSize="20dp"
        android:translationZ="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/Wifi_details_properties_text"
        app:layout_constraintStart_toEndOf="@+id/Wifi_details_properties_text"
        app:layout_constraintTop_toTopOf="@+id/Wifi_details_properties_text"
        tools:ignore="SpUsage,TextSizeCheck" />

    <!-- Other Networks -->

    <!-- Gauge -->

    <TextView
        android:id="@+id/Timeline_heading_box"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/box_top"
        app:layout_constraintEnd_toStartOf="@+id/Divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Wifi_details_box" />

    <TextView
        android:id="@+id/Timeline_heading_text"
        android:layout_width="340dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/Timeline_heading_text"
        android:textColor="#12141c"
        android:textSize="20dp"
        android:translationZ="100dp"
        app:layout_constraintStart_toStartOf="@+id/Timeline_heading_box"
        app:layout_constraintTop_toTopOf="@+id/Timeline_heading_box"
        tools:ignore="SpUsage,TextSizeCheck" />

    <TextView
        android:id="@+id/Timeline_current_strength_text"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/roboto"
        android:text="Current Strength: "
        android:textColor="#12141c"
        android:textSize="20dp"
        android:translationZ="100dp"
        app:layout_constraintEnd_toEndOf="@+id/Timeline_heading_box"
        app:layout_constraintTop_toTopOf="@+id/Timeline_heading_box"
        tools:ignore="SpUsage,TextSizeCheck" />

    <TextView
        android:id="@+id/Timeline_box"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginBottom="20dp"
        android:background="@drawable/box_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Timeline_heading_box"
        app:layout_constraintStart_toStartOf="@+id/Timeline_heading_box"
        app:layout_constraintTop_toBottomOf="@+id/Timeline_heading_box" />

    <TextView
        android:id="@+id/Timeline_legend_box"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="@+id/Timeline_box"
        app:layout_constraintStart_toStartOf="@+id/Timeline_box"
        app:layout_constraintTop_toTopOf="@+id/Timeline_box" />

    <TextView
        android:id="@+id/Timeline_legend_Wifi_strength_box"
        android:layout_width="140dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/Timeline_legend_box"
        app:layout_constraintStart_toStartOf="@+id/Timeline_legend_box"
        app:layout_constraintTop_toTopOf="@+id/Timeline_legend_box" />

    <TextView
        android:id="@+id/Timeline_legend_Wifi_strength_icon"
        android:layout_width="30dp"
        android:layout_height="5dp"
        android:layout_marginTop="7dp"
        android:background="#6D2DD4"
        app:layout_constraintStart_toStartOf="@+id/Timeline_legend_Wifi_strength_box"
        app:layout_constraintTop_toTopOf="@+id/Timeline_legend_Wifi_strength_box" />

    <TextView
        android:id="@+id/Timeline_legend_Wifi_strength_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="WiFi Strength"
        android:textColor="#12141c"
        app:layout_constraintStart_toEndOf="@+id/Timeline_legend_Wifi_strength_icon"
        app:layout_constraintTop_toTopOf="@+id/Timeline_legend_Wifi_strength_box" />

    <TextView
        android:id="@+id/timeline_legend_Network_change_box"
        android:layout_width="140dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/Timeline_legend_box"
