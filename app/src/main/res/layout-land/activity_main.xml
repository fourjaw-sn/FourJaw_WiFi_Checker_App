    <ImageView
        android:id="@+id/Connection_Quality_Icon"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:layout_marginStart="5dp"

        android:layout_marginTop="5dp"
        android:background="@drawable/round"
        android:translationZ="100dp"
        app:layout_constraintStart_toStartOf="@+id/connection_Quality_Icon_box"
        app:layout_constraintTop_toTopOf="@+id/connection_Quality_Icon_box"
        android:importantForAccessibility="no" />

    <ImageView
        android:id="@+id/connection_Quality_Icon_box"
        android:layout_width="40dp"
        android:layout_height="40dp"
